<?xml version="1.0.3" encoding="utf-8"?>
<!-- 
Archivo: android/res/xml/file_paths.xml
Define las rutas accesibles por el FileProvider
-->
<paths xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Directorio de caché interno -->
    <cache-path name="cache_files" path="." />
    
    <!-- Directorio de archivos internos -->
    <files-path name="internal_files" path="." />
    
    <!-- Directorio de caché externo -->
    <external-cache-path name="external_cache" path="." />
    
    <!-- Directorio de archivos externos -->
    <external-files-path name="external_files" path="." />
    
</paths>